<?xml version="1.0" encoding="UTF-8"?>
<addon provider-name="jurialmunkey, Ic3Dragon5110, Totenkopf" name="(fuse)neue" version="1.0.6" id="skin.fuse.neue">
    <requires>
       <import addon="xbmc.gui" version="5.16.0"/>
        <import addon="script.extendedinfo" version="6.0.5"/>
        <import addon="script.toolbox" version="2.0.1"/>
        <import addon="script.image.resource.select" version="3.0.2"/>
        <import addon="script.skinshortcuts" version="2.0.3"/>
        <import addon="script.skin.helper.service" version="1.20.1"/>
        <import addon="script.skin.helper.backgrounds" version="1.0.36"/>
        <import addon="script.skin.helper.colorpicker" version="2.0.2"/>                          	
        <import addon="script.skin.helper.skinbackup" version="1.0.22"/>                                 
        <import addon="script.skin.helper.widgets" version="1.0.45"/>
        <import addon="plugin.program.autocompletion" version="2.1.3"/>
        <import addon="resource.images.studios.white" version="1.1.3"/>
        <import addon="resource.images.moviegenreicons.transparent" version="0.0.6"/>
		<import addon="plugin.video.themoviedb.helper" version="5.1.42~nexus"/>
    </requires>
    <extension point="xbmc.gui.skin" defaultthemename="Textures.xbt" debugging="fals" effectslowdown="1">
       <res width="1920" height="1080" aspect="16:9" default="true" folder="1080i"/>
    </extension>
    <extension point="xbmc.addon.metadata">
       <summary lang="de_de">Sanfte Farbverläufe, Pixel-Highlights und sichtbares Fanart</summary>
	   <summary lang="en_gb">Soft gradients, pixel highlights and visible fanart</summary>
       <description lang="de_de">(fuse)neue ist ein sehr sauber aussehender Skin mit horizontalem Obermenü, der im gesamten Skin niedrige Listenansichtstypen verwendet, um Fanart zu präsentieren. Die Home-Menüleiste ist von überall aus durch Drücken von „nach oben“ zugänglich, sodass Sie nie wieder „Go Home“ müssen".</description>
       <description lang="en_gb">(fuse)neue is a very clean looking skin with horizontal style top menu which utilises low list viewtypes throughout the skin in order to showcase fanart. The home menu bar is accessible from anywhere by pressing up, minimising the need to ever "go home".</description>
	   <platform>all</platform>
